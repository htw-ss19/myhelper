<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"  displayBlock="true">
	<Shell>
		<App>
			<pages>
				<Page title="{i18n>homePageTitle}">
					<content>
						<Image src="https://ui5.sap.com/resources/sap/ui/documentation/sdk/images/logo_ui5.png" width="140px" height="140px" id="image0"/>
						<Panel headerText="{i18n>helloPanelTitle}">
							<content>
								<sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" id="form0">
									<sap.ui.layout.form:formContainers>
										<sap.ui.layout.form:FormContainer title="Title" id="container2">
											<sap.ui.layout.form:formElements>
												<sap.ui.layout.form:FormElement label="Benutzername/E-Mail" id="benutzer">
													<sap.ui.layout.form:fields>
														<Input width="100%" id="input2"/>
													</sap.ui.layout.form:fields>
												</sap.ui.layout.form:FormElement>
												<sap.ui.layout.form:FormElement label="Password" id="password">
													<sap.ui.layout.form:fields>
														<Input width="100%" id="input0"/>
													</sap.ui.layout.form:fields>
												</sap.ui.layout.form:FormElement>
											</sap.ui.layout.form:formElements>
										</sap.ui.layout.form:FormContainer>
									</sap.ui.layout.form:formContainers>
									<sap.ui.layout.form:layout>
										<sap.ui.layout.form:ResponsiveGridLayout id="layout0"/>
									</sap.ui.layout.form:layout>
								</sap.ui.layout.form:Form><Button xmlns="sap.m" text="Anmelden" id="login_btn"/>
							</content>
						</Panel>
						<Panel>
							<content>
								<Text xmlns="sap.m" text="Noch nicht regestriert?" id="text3"/><Button xmlns="sap.m" text="Regestieren" id="reges_betn"/>
							</content>
						</Panel>
						<Text xmlns="sap.m" text="Terms | Privacy | Security | Contact" id="text0"/>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>