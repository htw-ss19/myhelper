<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" displayBlock="false">
		<App>
			<pages>
				<Page title="{i18n>homePageTitle}">
					<content>
						<Image src="https://ui5.sap.com/resources/sap/ui/documentation/sdk/images/logo_ui5.png" width="140px" height="140px" id="logo"/>
						<Panel headerText="{i18n>helloPanelTitle}">
							<content>
								<sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" id="loginForm">
									<sap.ui.layout.form:formContainers>
										<sap.ui.layout.form:FormContainer title="Title" id="container">
											<sap.ui.layout.form:formElements>
												<sap.ui.layout.form:FormElement label="Benutzername/E-Mail" id="benutzerLabel">
													<sap.ui.layout.form:fields>
														<Input width="100%" id="emailLogin"/>
													</sap.ui.layout.form:fields>
												</sap.ui.layout.form:FormElement>
												<sap.ui.layout.form:FormElement label="Password" id="passwordLabel">
													<sap.ui.layout.form:fields>
														<Input width="100%" id="passwordLogin"/>
													</sap.ui.layout.form:fields>
												</sap.ui.layout.form:FormElement>
											</sap.ui.layout.form:formElements>
										</sap.ui.layout.form:FormContainer>
									</sap.ui.layout.form:formContainers>
									<sap.ui.layout.form:layout>
										<sap.ui.layout.form:ResponsiveGridLayout id="layout"/>
									</sap.ui.layout.form:layout>
								</sap.ui.layout.form:Form><Button xmlns="sap.m" text="Anmelden" id="login_btn_index"/>
							</content>
						</Panel>
						<Panel>
							<content>
								<Text xmlns="sap.m" text="Noch nicht regestriert?" id="regesText"/><Button xmlns="sap.m" text="Regestieren" id="reges_btn"/>
							</content>
						</Panel>
						<Text xmlns="sap.m" text="Terms | Privacy | Security | Contact" id="infobar"/>
					</content>
				</Page>
			</pages>
		</App>
</mvc:View>
